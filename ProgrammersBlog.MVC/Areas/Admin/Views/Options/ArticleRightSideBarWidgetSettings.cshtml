@model ProgrammersBlog.MVC.Areas.Admin.Models.ArticleRightSideBarWidgetOptionsViewModel
@using ProgrammersBlog.Entities.ComplexTypes
@{
    Layout = "_Layout";
    ViewBag.Title = "Widget Settings for Article Page";

}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Widget Settings for Article Page</h4>
            </div>
            <div class="card-body">
                <form asp-controller="options" asp-action="articlerightsidebarwidgetsettings" method="post" id="form-articlerightsidebarwidgetsettings-update">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Header"></label>
                            <input class="form-control" asp-for="Header" placeholder="Please, insert widget header." />
                            <span class="text-danger" asp-validation-for="Header"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="TakeSize"></label>
                            <input class="form-control" asp-for="TakeSize" type="number" />
                            <span class="text-danger" asp-validation-for="TakeSize"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="FilterBy" for="filterByList"></label>
                            <select asp-for="FilterBy" asp-items="Html.GetEnumSelectList<FilterBy>()" id="filterByList" class="form-control">
                                <option></option>
                            </select>
                            <span asp-validation-for="FilterBy" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="CategoryId" for="categoryList"></label>
                            <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" id="categoryList" class="form-control">
                                <option></option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="OrderBy" for="orderByList"></label>
                            <select asp-for="OrderBy" asp-items="Html.GetEnumSelectList<OrderBy>()" id="orderByList" class="form-control">
                                <option></option>
                            </select>
                            <span asp-validation-for="OrderBy" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="IsAscending" for="isAscendingList"></label>
                            <select asp-for="IsAscending" id="isAscendingList" class="form-control">
                                <option></option>
                                <option value="true">Ascending</option>
                                <option value="false">Descending</option>
                            </select>
                            <span asp-validation-for="IsAscending" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="StartAt" for="startAtDatePicker"></label>
                            <input asp-for="StartAt" type="text" id="startAtDatePicker" class="form-control" value="@Model.StartAt.ToShortDateString()" />
                            <span asp-validation-for="StartAt" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="EndAt" for="endAtDatePicker"></label>
                            <input asp-for="EndAt" type="text" id="endAtDatePicker" class="form-control" value="@Model.EndAt.ToShortDateString()" />
                            <span asp-validation-for="EndAt" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MinViewCount"></label>
                            <input class="form-control" asp-for="MinViewCount" type="number" />
                            <span class="text-danger" asp-validation-for="MinViewCount"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MaxViewCount"></label>
                            <input class="form-control" asp-for="MaxViewCount" type="number" />
                            <span class="text-danger" asp-validation-for="MaxViewCount"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MinCommentCount"></label>
                            <input class="form-control" asp-for="MinCommentCount" type="number" />
                            <span class="text-danger" asp-validation-for="MinCommentCount"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MaxViewCount"></label>
                            <input class="form-control" asp-for="MaxViewCount" type="number" />
                            <span class="text-danger" asp-validation-for="MaxViewCount"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Save</button>
                            <a class="btn btn-danger" asp-area="admin" asp-controller="home" asp-action="index"><span class="fas fa-times"></span> Cancel</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js" integrity="sha512-uto9mlQzrs59VwILcLiRYeLKPPbS/bT71da/OEBYEwcdNUk8jYIy+D176RYoop1Da+f9mvkYrmj5MCLZWEtQuA==" crossorigin="anonymous"></script>
    <script src="~/Admin/js/articleRightSideBarWidgetSettings.js" type="application/ecmascript"></script>
}
@section Styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/themes/cupertino/theme.min.css" integrity="sha512-adRIgePtMQgAVB+Mfkhl+Nyva/WllWlFzJyyhYCjznU3Di+Z4SsYi1Rqsep11PYLpUsW/SjE4NXUkIjabQJCOQ==" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/themes/cupertino/jquery-ui.min.css" integrity="sha512-ug/p2fTnYRx/TfVgL8ejTWolaq93X+48/FLS9fKf7AiazbxHkSEENdzWkOxbjJO/X1grUPt9ERfBt21iLh2dxg==" crossorigin="anonymous" />
    <link href="~/Admin/css/select2-bootstrap4.min.css" rel="stylesheet" />
}