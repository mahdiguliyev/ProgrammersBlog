@model ProgrammersBlog.Entities.Concrete.SmtpSettings

@{
    Layout = "_Layout";
    ViewBag.Title = "E-Mail Settings";

}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> E-Mail Settings</h4>
            </div>
            <div class="card-body">
                <form asp-controller="options" asp-action="emailSettings" method="post" id="form-emailsettings-update">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Server"></label>
                            <input class="form-control" asp-for="Server" placeholder="Please, insert smtp server name." />
                            <span class="text-danger" asp-validation-for="Server"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Port"></label>
                            <input type="number" class="form-control" asp-for="Port" placeholder="Please, insert smtp port." />
                            <span class="text-danger" asp-validation-for="Port"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="SenderName"></label>
                            <input type="text" class="form-control" asp-for="SenderName" placeholder="Please, insert sender name.." />
                            <span class="text-danger" asp-validation-for="SenderName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="SenderEmail"></label>
                            <input type="text" class="form-control" asp-for="SenderEmail" placeholder="Please, insert sender e-mail address." />
                            <span class="text-danger" asp-validation-for="SenderEmail"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Username"></label>
                            <input type="text" class="form-control" asp-for="Username" placeholder="Please, insert username/e-mail." />
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Please, insert password for e-mail." />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Save</button>
                            <a class="btn btn-danger" asp-area="admin" asp-controller="home" asp-action="index"><span class="fas fa-times"></span> Cancel</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
