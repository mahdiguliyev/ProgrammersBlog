@model ProgrammersBlog.Entities.Dtos.UserUpdateDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Edit Profile";
}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Edit Profile</h4>
            </div>
            <div class="card-body">
                <form asp-controller="user" asp-action="changedetails" enctype="multipart/form-data" method="post" id="form-user-update">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName" placeholder="Please, enter username."/>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Email"></label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="Please, enter e-mail address."/>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName"></label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="Please, enter firstname."/>
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="LastName"></label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="Please, enter lastname."/>
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="PhoneNumber"></label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Please, enter phone number."/>
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="WebsiteLink"></label>
                            <input type="text" class="form-control" asp-for="WebsiteLink" placeholder="Please, enter website link."/>
                            <span class="text-danger" asp-validation-for="WebsiteLink"></span>
                        </div>
                        <div class="form-group col-md-12">
                        <label asp-for="About"></label>
                            <textarea class="form-control" asp-for="About" placeholder="Please, enter information about you." rows="4"></textarea>
                        <span class="text-danger" asp-validation-for="About"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="TwitterLink"></label>
                        <input type="text" class="form-control" asp-for="TwitterLink" placeholder="Please, enter twitter profile link."/>
                        <span class="text-danger" asp-validation-for="TwitterLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="FacebookLink"></label>
                        <input type="text" class="form-control" asp-for="FacebookLink" placeholder="Please, enter facebook profile link."/>
                        <span class="text-danger" asp-validation-for="FacebookLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="InstagramLink"></label>
                        <input type="text" class="form-control" asp-for="InstagramLink" placeholder="Please, enter instagram profile link."/>
                        <span class="text-danger" asp-validation-for="InstagramLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LinkedInLink"></label>
                        <input type="text" class="form-control" asp-for="LinkedInLink" placeholder="Please, enter linkedln profile link."/>
                        <span class="text-danger" asp-validation-for="LinkedInLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="YoutubeLink"></label>
                        <input type="text" class="form-control" asp-for="YoutubeLink" placeholder="Please, enter youtube profile link."/>
                        <span class="text-danger" asp-validation-for="YoutubeLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="GitHubLink"></label>
                        <input type="text" class="form-control" asp-for="GitHubLink" placeholder="Please, enter github profile link."/>
                        <span class="text-danger" asp-validation-for="GitHubLink"></span>
                    </div>
                        
                        <div class="form-group col-md-6">
                            <label asp-for="Picture"></label>
                            <input asp-for="Picture" type="hidden" />
                            <img class="my-image" src="~/img/@Model.Picture" alt="@Model.UserName"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="PictureFile"></label>
                            <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile"/>
                            <span class="text-danger" asp-validation-for="PictureFile"></span>
                        </div>
                        <div class="form-group col-md-12 text-center">
                            <button type="submit" class="btn btn-primary btn-lg"><span class="fas fa-save"></span> Save</button>
                            <a class="btn btn-danger btn-lg" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span> Cancel</a>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>
